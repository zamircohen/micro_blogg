<%- include("partials/header.ejs") %>

        <h1>Critter Posts</h1>

        <p> You are logged in as: <b><%= username %> </p> </b>

        <form action="/logout" method="POST">
        <button type="submit">Logout</button><br/>
        </form>    

        <br/>

        <form method="POST">
            <input type="text" name="post_text" maxlength="140" placeholder="What to do?">
            <button type="submit">To do</button>
        </form>

        <h1>My Crits</h1>

        <ul>
            <% POSTS.forEach((item) => { %>
            <li> 
                <%= item.post_text%> <i><small>- posted on <%= item.date %> </small></i>
            </li>
            <% }) %>
        </ul>

        <form action="/delete" method="POST">
            <button type="submit">Delete last post</button>
        </form>

<%- include("partials/footer.ejs") %>
